/* pages/publish/publish.wxss */
.content {
  height: 100%;
  width: 100%;
}
textarea {
  width: 100%;
  padding: 25rpx 0;
}
.text-content {
  background-color: #f3efef;
  padding: 0 25rpx;
}
.image-group {
  display: flex;
  white-space: nowrap;
  margin-top: 60rpx;
}
.image-group view {
  width: 375rpx;
  height: 375rpx;
  display: inline-block;
  flex-direction: row;
  margin: 0 20rpx 0 20rpx;
  background-color: #cccccc;
}
.image-group view image {
  width: 100%;
  height: 100%;
  align-items: center;
}
.image-group view icon {
  display: inline-block;
  position: absolute;
  vertical-align: top;
}

.btn-func {
  display: flex;
  flex-direction: column;
  position: absolute;
  width: 100%;
  bottom: 0;
  margin: 0 auto;
  align-items: center;
}
.btn-img {
  width: 400rpx;
  height: 90rpx;
  line-height: 60rpx;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  background-color: #b38787;
  color: #fff;
  border-radius: 100rpx;
}
.btn {
  width: 400rpx;
  height: 90rpx;
  line-height: 60rpx;
  border-radius: 100rpx;
  margin-bottom: 40rpx;
}








